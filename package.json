{
  "name": "rosa-bot-v2",
  "version": "1.0.0",
  "description": "Rework Rosa bot for line messenger platform from scratch",
  "main": "index.ts",
  "engines": {
    "node": "14.x"
  },
  "type": "module",
  "scripts": {
    "start": "ts-node --require tsconfig-paths/register index.ts",
    "start-local": "NODE_ENV=development nodemon",
    "ngrok": "ngrok http 3000 --authtoken=$(grep NGROK_AUTHTOKEN .env | cut -d '=' -f2) --log=stdout | grep -o -E \"https://[^\\\"]+\"",
    "debug": "npm-run-all -p start-local ngrok",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,json,md}\"",
    "pretty-quick": "pretty-quick --staged '**/*.{js,jsx,ts,tsx}'",
    "prepare": "npx husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "husky": "^8.0.3",
    "ngrok": "^4.3.3",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@line/bot-sdk": "^7.5.2",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  }
}
