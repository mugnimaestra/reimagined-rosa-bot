{
  "name": "rosa-bot-v2",
  "version": "1.0.0",
  "description": "Rework Rosa bot for line messenger platform from scratch",
  "main": "index.ts",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm index.ts",
    "ngrok": "ngrok http 3000 --authtoken=$(grep NGROK_AUTHTOKEN .env | cut -d '=' -f2)",
    "debug": "npm-run-all -p start ngrok"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "husky": "^8.0.3",
    "ngrok": "^4.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@line/bot-sdk": "^7.5.2",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged '**/*.{js,jsx,ts,tsx}'"
    }
  }
}
